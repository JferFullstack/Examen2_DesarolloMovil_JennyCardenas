// miAppProductos-backend/tsconfig.json
{
    "compilerOptions": {
        "target": "es2016",                                  /* Establece la versión de JavaScript para el código generado. */
        "module": "commonjs",                               /* Especifica el sistema de módulos para el código generado. */
        "rootDir": "./src",                                 /* Especifica la carpeta raíz que contiene los archivos fuente. */
        "outDir": "./dist",                                 /* Especifica la carpeta de salida para los archivos JavaScript compilados. */
        "esModuleInterop": true,                            /* Habilita la interoperabilidad con módulos CommonJS para importaciones por defecto. */
        "forceConsistentCasingInFileNames": true,           /* Exige que la capitalización de las referencias a archivos sea consistente. */
        "strict": true,                                     /* Habilita todas las opciones de verificación de tipo estricta. */
        "skipLibCheck": true,                               /* Omite la verificación de tipos de todos los archivos de declaración (.d.ts) en las librerías. */
        "resolveJsonModule": true                           /* Permite importar módulos con una extensión .json. */
    },
    "include": [
        "src/**/*.ts",                                      /* Incluye todos los archivos .ts dentro de la carpeta src. */
        "src/**/*.json"                                     /* Incluye todos los archivos .json dentro de la carpeta src (si los tuvieras). */
    ],
    "exclude": [
        "node_modules"                                      /* Excluye la carpeta node_modules de la compilación. */
    ]
}
